{% extends 'base.html.twig' %}

{% block title %}{{ parent() ~ " | Admin - Guides" }}
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1>Hike</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ hike.id }}</td>
				</tr>
				<tr>
					<th>Title</th>
					<td>{{ hike.title }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ hike.description }}</td>
				</tr>
				<tr>
					<th>Elevation</th>
					<td>{{ hike.elevation }}</td>
				</tr>
				<tr>
					<th>Distance</th>
					<td>{{ hike.distance }}</td>
				</tr>
				<tr>
					<th>Difficulty</th>
					<td>{{ hike.difficulty }}</td>
				</tr>
				<tr>
					<th>Type</th>
					<td>{{ hike.type }}</td>
				</tr>
			</tbody>
		</table>

		<div class="d-flex justify-content-between">
			<a class="btn btn-outline-primary" href="{{ path('app_admin_hike_index') }}">Retour</a>

			<a class="btn btn-outline-tertiary" href="{{ path('app_admin_hike_edit', {'slug': hike.slug}) }}">Modifier</a>
		</div>
	</div>
{% endblock %}
